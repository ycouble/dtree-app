{
  "localisation": {
    "question": "où ?",
    "description": "choississez l'option qui correspond le mieux à votre cas.",
    "type": "radio",
    "reponses": [
      {
        "nom": "Dans un entrepot",
        "dest": "entrepot"
      },{
        "nom": "Sur la chaine de fabrication",
        "dest": "chaine"
      },{
        "nom": "Sur un produit fini",
        "dest": "produit"
      }
    ],
    "branches": {
      "entrepot": {
        "question": "Depuis combien de temps l'article contenant la salmonelle était-il entreposé ?",
        "description": "si ce n'est pas un article, donnez la durée depuis le dernier controle de l'objet",
        "type": "number",
        "unit": "heure",
        "reponses": [
          {"between": [0, 1], "dest": "court"},
          {"between": [1, 24], "dest": "moyen"},
          {"between": [24, -1], "dest": "long"}
        ],
        "branches": {
          "court": {
            "question": "Résultat analyse X ?",
            "description": "en mg/cm3",
            "type": "number",
            "reponses": {
              "x<30.5": {"dest": "acceptable"},
              "30.5<=x": {"dest": "alarmant"}
            },
            "branches": {
              "acceptable": {
                "question": null,
                "description": "pas d'inquiétude, tout va bien",
                "type": "end",
                "actions": ["save", "send"]
              },
              "alarmant": {
                "question": null,
                "description": "c'est le moment d'annoncer à ton boss qu'il y a une salmonelle dans le potage",
                "type": "end",
                "actions": ["save", "send"]
              }
            }
          },
          "moyen": {
            "question": "Résultat analyse X ?",
            "description": "en mg/cm3",
            "type": "number",
            "reponses": {
              "x<15.5": {"dest": "acceptable"},
              "15.5<=x": {"dest": "alarmant"}
            },
            "branches": {
              "acceptable": {
                "question": null,
                "description": "pas d'inquiétude, tout va bien",
                "type": "end",
                "actions": ["save", "send"]
              },
              "alarmant": {
                "question": null,
                "description": "c'est le moment d'annoncer à ton boss qu'il y a une salmonelle dans le potage",
                "type": "end",
                "actions": ["save", "send"]
              }
            },
            "long": {
              "question": null,
              "description": "c'est le moment d'annoncer à ton boss qu'il y a une salmonelle dans le potage, et qu'il faut raccourcir les délais entre les contrôles car l'analyse X ne peut même plus être faite.",
              "type": "end",
              "actions": ["save", "send"]
            }
          }
        },
        "chaine": {
          "question": "Résultat analyse X ?",
          "description": "en mg/cm3",
          "type": "number",
          "reponses": {
            "x<30.5": {"dest": "acceptable"},
            "30.5<=x": {"dest": "alarmant"}
          },
          "branches": {
            "acceptable": {
              "question": null,
              "description": "pas d'inquiétude, tout va bien",
              "type": "end",
              "actions": ["save", "send"]
            },
            "alarmant": {
              "question": null,
              "description": "c'est le moment d'annoncer à ton boss qu'il y a une salmonelle dans le potage",
              "type": "end",
              "actions": ["save", "send"]
            }
          },
          "produit": {
            "question": "Avez-vous controlé la chaine de production et les entrepôts ?",
            "description": "Généralement, une salmonelle n'est jamais seule",
            "type": "boolean",
            "reponses": {
              "oui": {"dest": "produit"},
              "non": {"dest": "produit", "tache": "verification prod et entrepots"}
            },
            "branches": {
              "produit": {
                "question": null,
                "description": "Rappeler tous les produits !",
                "type": "end",
                "actions": ["save", "send"]
              }
            }
          }
        }
      }
    }
  }
}
